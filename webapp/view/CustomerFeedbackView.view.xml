<mvc:View xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:layout="sap.ui.layout"
  xmlns:form="sap.ui.layout.form"
  xmlns:core="sap.ui.core"
  controllerName="converted.customerfeedbackview.controller.CustomerFeedbackView"
  displayBlock="true"
          xmlns:commons="sap.ui.commons">
  <Page title="Customer Feedback Form" enableScrolling="true">
    <content>
      <form:SimpleForm id="customerFeedbackForm"
        editable="true"
        layout="ResponsiveGridLayout"
        title="Customer Feedback">
        <form:content>
          <Label id="nameLabel" text="Name" />
          <Input id="nameField"
            placeholder="Enter your name"
            value="{customer>/name}"
            required="true" />

          <Label id="emailLabel" text="Email" />
          <Input id="emailField"
            placeholder="Enter your email"
            value="{customer>/email}"
            type="Email" />

          <Label id="ratingLabel" text="Rating (1-5 stars)" />
          <RatingIndicator id="ratingIndicator"
            maxValue="5"
            value="{customer>/rating}"
            liveChange=".onRatingChange" />

          <Label id="serviceQualityLabel" text="Service Quality" />
          <CheckBox id="serviceQualityExcellent" text="Excellent" />
          <CheckBox id="serviceQualityGood" text="Good" />
          <CheckBox id="serviceQualityAverage" text="Average" />
          <CheckBox id="serviceQualityPoor" text="Poor" />

          <Label id="commentLabel" text="Comments" />
          <TextArea id="commentField"
            placeholder="Enter your comments"
            value="{customer>/comments}"
            rows="5" />

          <Button id="submitButton"
            text="Submit"
            type="Emphasized"
            press=".onSubmit" />

          <MessageStrip id="messageArea"
            text="Thank you for your feedback!"
            type="Success"
            showIcon="true"
            visible="{= ${customer>/feedbackSubmitted} === true }" />

        </form:content>
      </form:SimpleForm>
    </content>
  </Page>
</mvc:View>